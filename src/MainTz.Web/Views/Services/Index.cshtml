@using MainTz.Web.ViewModels.ServicesViewModels;
@model ServicesResponse

<div class="container text-custom-light-text py-2">
    <div class="row">
        <div class="col">
            <div class="d-flex align-content-center justify-content-center">
                <form asp-controller="Services" asp-action="CreateBrand" class="form w-100 p-2">
                    <h2 class="text-center custom-text-color">Добавить бренд</h2>
                    <div class="d-flex mb-2">
                        <label class="px-1 text-nowrap">Название бренда: </label>
                        <input type="text" name="Brand.Name" class="w-100 py-1" />
                    </div>
                    <div class="py-1 d-flex justify-content-center">
                        <button type="submit" class="text-center custom-btn-submit-form-green">Создать бренд</button>
                    </div>
                </form>
            </div>
            @if (User.IsInRole("Admin"))
            {
                <div class="col pt-3">
                    <div class="custom-dark-container">
                        <h2 class="text-center custom-text-color">Бренды автомобилей</h2>
                        <div class="pb-2">
                            @foreach (var brand in Model.Brands)  
                            {
                                <div class="d-flex justify-content-center my-1">
                                    <div class="text-center custom-text-color">Название: @brand.Name</div>
                                    <a asp-controller="Services" asp-action="DeleteBrand" asp-route-Id="@brand.Id" class="text-center custom-btn-submit-form-red px-1 py-0">Удалить бренд</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            <div class="d-flex align-content-center justify-content-center">
                    <form class="form w-100 p-2" asp-controller="Services" asp-action="DeleteBrandByName">
                    <h2 class="text-center custom-text-color">Удалить бренд по названию</h2>
                     <div class="d-flex mb-2">
                         <label class="px-1 text-nowrap">Название: </label>
                         <input type="text" name="name" class="w-100 py-1" />
                     </div>
                    <div class="py-1 d-flex justify-content-center">
                        <button type="submit" class="text-center custom-btn-submit-form-red">Удалить бренд по названию</button>
                    </div>
                </form>
            </div>
            }
        </div>

    <div class="col">
          <div class="d-flex align-content-center justify-content-center">
               <form asp-controller="Services" asp-action="CreateManufacturer" class="form w-100 p-2">
                   <h2 class="text-center custom-text-color">Добавить производителя</h2>
                   <div class="d-flex mb-2">
                       <label class="px-1 text-nowrap">Название производителя: </label>
                       <input type="text" name="Manufacturer.Name" class="w-100 py-1" />
                   </div>
                   <div class="d-flex mb-2">
                       <label class="px-1 text-nowrap">Описание производителя: </label>
                       <input type="text" name="Manufacturer.Description" class="w-100 py-1" />
                   </div>
                   <div class="d-flex mb-2">
                       <label class="px-1 text-nowrap">Город: </label>
                       <input type="text" name="Manufacturer.City" class="w-100 py-1" />
                   </div>
                   <div class="py-1 d-flex justify-content-center">
                       <button type="submit" class="text-center custom-btn-submit-form-green">Создать производителя</button>
                   </div>
               </form>
          </div>
           @if (User.IsInRole("Admin"))
           {

               <div class="col pt-3">
                   <div class="custom-dark-container">
                       <h2 class="text-center custom-text-color">Производители</h2>
                       <div class="pb-2 text-center custom-text-color">
                           @foreach (var manufacturer in Model.Manufacturers)
                           {
                               <div class="pb-4">
                                   <div>Название: @manufacturer.Name</div>
                                   <div>Город: @manufacturer.City</div>
                                   <div>Описание: @manufacturer.Description</div>
                                   <a asp-controller="Services" asp-action="DeleteManufacturer" asp-route-Id="@manufacturer.Id" class="text-center custom-btn-submit-form-red px-1">Удалить производителя @manufacturer.Id</a>
                               </div>
                           }
                       </div>
                   </div>
               </div>
               <div class="d-flex align-content-center justify-content-center">
                   <form class="form w-100 p-2" asp-controller="Services" asp-action="DeleteManufacturerByName">
                       <h2 class="text-center custom-text-color">Удалить производителя по названию</h2>
                       <div class="d-flex mb-2">
                           <label class="px-1 text-nowrap">Название: </label>
                           <input type="text" name="name" class="w-100 py-1" />
                       </div>
                       <div class="py-1 d-flex justify-content-center">
                           <button type="submit" class="text-center custom-btn-submit-form-red">Удалить производителя по названию</button>
                       </div>
                   </form>
               </div>
           }
           </div>
     </div>
</div>