<nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow">
    <a class="navbar-brand custom-btn-orange" asp-area="" asp-controller="Car" asp-action="GetCars"><i class="bi bi-alexa px-1"></i>E-Car Shop</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
            aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
                <a id="GetCarsHeaderBtn" class="nav-link custom-btn-orange" asp-area="" asp-controller="Car" asp-action="GetCars">
                    <i class="bi bi-bag"></i>
                    <span>Машины</span>
                </a>
            </li>
            @if (User.IsInRole("Manager") || User.IsInRole("Admin"))
            {
                <li class="nav-item">
                    <a class="nav-link custom-btn-orange" asp-area="" asp-controller="Car" asp-action="GetCreateCar">
                        <i class="bi bi-plus-circle"></i>
                        <span>Добавить машину</span>
                    </a>
                </li>
                <li>
                    <a class="nav-link custom-btn-orange" asp-area="" asp-controller="Services" asp-action="index">
                        <i class="bi bi-plus-circle"></i>
                        <span>Добавить производителя</span>
                    </a>
                </li>
            }
            @if (User.IsInRole("Admin"))
            {
                <li class="nav-item">
                    <a class="nav-link custom-btn-orange" asp-area="" asp-controller="User" asp-action="GetUsers">
                        <i class="bi bi-people"></i>
                        <span>Пользователи</span>
                    </a>
                </li>
            }
        </ul>
    </div>

    <div class="d-flex justify-content-end px-2" style="font-size:24px;">
        <ul class="navbar-nav list-group">
            @if(!User.Identity.IsAuthenticated)
            {
                <li class="list-inline-item">
                    <a class="nav-link custom-btn-orange d-flex justify-content-center align-content-center" asp-area="" asp-controller="Auth" asp-action="Register">
                        <i class="bi bi-box-arrow-in-right"></i>
                        <span class="px-1">Не зарегистрированы?</span>
                    </a>
                </li>
            }
            else
            {
                <li id="notifications-item-btn" class="list-inline-item justify-content-center align-content-center">
                    @await Component.InvokeAsync("Notifications")
                </li>
                <li id="favorite-item-btn">
                    <a class="nav-link custom-btn-orange d-flex justify-content-center align-content-center" asp-controller="FavoriteCar" asp-action="GetFavoriteCars">
                        <i class="bi bi-star"></i>
                    </a>
                </li>
                <li>
                    <a class="nav-link custom-btn-orange d-flex justify-content-center align-content-center" asp-controller="Auth" asp-action="LogOut">
                        <i class="bi bi-box-arrow-left"></i>
                    </a>
                </li>
                <li id="account-item-btn">
                    <a class="nav-link custom-btn-orange d-flex justify-content-center align-content-center" asp-area="" asp-controller="Account" asp-action="Index">
                        <i class="bi bi-person"></i>
                        <span class="px-1">Добро пожаловать @User.Identity.Name!</span>
                    </a>
                </li>
            }
        </ul>
    </div>
</nav>